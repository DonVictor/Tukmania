<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Names</th>
            <th>Last_names</th>
            <th>Dni</th>
            <th>Birthday_at</th>
            <th>Location_id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.names }}</td>
            <td>{{ entity.lastnames }}</td>
            <td>{{ entity.dni }}</td>
            <td>{% if entity.birthdayat %}{{ entity.birthdayat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.locationid }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
